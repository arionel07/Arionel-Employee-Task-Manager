model DashboardUser {
  id        String  @id @default(uuid())
  userId    String
  projectId String
  managerId String
  name      String
  nickname  String?
  avatar    String?
  role      Role    @default(EMPLOYEE)

  user    User    @relation("UserDashboardUsers", fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
  manager User    @relation("ManagerDashboard", fields: [managerId], references: [id])

  tasks Task[] @relation("DashboardUserTasks") // задачи, назначенные этому DashboardUser

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([projectId])
  @@index([userId])
  @@map("dashboard_user")
}
